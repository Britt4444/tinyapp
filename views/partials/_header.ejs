<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register User</a>
      </div>
    </div>
    <% if (user) { %> 
    <label>Logged in as: <%= user.email %></label> &nbsp;&nbsp;&nbsp;&nbsp;
    <form class="form-inline" action="/logout" method="POST">
      <button type="submit" class="btn btn-primary">Logout</button>
    </form>
    <% } else { %>
    <form class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="email"></label>
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="example@address.com"
          style="width: 300px; margin: 1em"
        />
        <label for="password"></label>
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="Enter password"
          style="width: 300px; margin: 1em"
        />
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>